<?xml version="1.0" encoding="UTF-8"?>
<test-data
    xmlns="http://pmd.sourceforge.net/rule-tests"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://pmd.sourceforge.net/rule-tests http://pmd.sourceforge.net/rule-tests_1_0_0.xsd">

    <test-code>
        <description>Ok, simple</description>
        <expected-problems>0</expected-problems>
        <code><![CDATA[
var x = (1);
        ]]></code>
    </test-code>

    <test-code>
        <description>Bad, simple</description>
        <expected-problems>1</expected-problems>
        <code><![CDATA[
var x = ((1));
        ]]></code>
    </test-code>

    <test-code>
        <description>Ok, complex</description>
        <expected-problems>0</expected-problems>
        <code><![CDATA[
var x = ((1 > 2) || (3 < 4));
        ]]></code>
    </test-code>

    <test-code>
        <description>Bad, complex</description>
        <expected-problems>1</expected-problems>
        <code><![CDATA[
var x = (((1 > 2)) || (3 < 4));
        ]]></code>
    </test-code>
</test-data>
