<?xml version="1.0" encoding="UTF-8"?>
<test-data
    xmlns="http://pmd.sourceforge.net/rule-tests"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://pmd.sourceforge.net/rule-tests http://pmd.sourceforge.net/rule-tests_1_0_0.xsd">

    <test-code>
        <description>Bad example #1</description>
        <expected-problems>1</expected-problems>
        <code><![CDATA[
#macro( mymacro $v1 )
    #foreach($c1 in $list)
        stuff
    #end
#end
        ]]></code>
    </test-code>

    <test-code>
        <description>Good example #1</description>
        <expected-problems>0</expected-problems>
        <code><![CDATA[
#macro( mymacro $v1 )
    #foreach($c1 in $v1)
        stuff
    #end
#end
        ]]></code>
    </test-code>

    <test-code>
        <description>Good example #2</description>
        <expected-problems>0</expected-problems>
        <code><![CDATA[
#macro( mymacro $v1 )
    #set($v2 = "${X} $v1 ${X}" )
#end
        ]]></code>
    </test-code>

    <test-code>
        <description>Good example #3</description>
        <expected-problems>0</expected-problems>
        <code><![CDATA[
#macro( mymacro $v1 )
    #set($v2 = "${X}${v1}${X}" )
#end
        ]]></code>
    </test-code>

    <test-code>
        <description>Good example #4</description>
        <expected-problems>0</expected-problems>
        <code><![CDATA[
#macro( mymacro $v1 )
    #set($v2 = "${X}$!v1${X}" )
#end
        ]]></code>
    </test-code>

    <test-code>
        <description>Good example #5</description>
        <expected-problems>0</expected-problems>
        <code><![CDATA[
#macro( mymacro $v1 )
    #set($v2 = "${X}${v1.val}${X}" )
#end
        ]]></code>
    </test-code>

    <test-code>
        <description>Good example #6</description>
        <expected-problems>0</expected-problems>
        <code><![CDATA[
#macro( mymacro $v1 )
    <div class="c1 $!v1">
#end
        ]]></code>
    </test-code>

    <test-code>
        <description>Good example #7</description>
        <expected-problems>0</expected-problems>
        <code><![CDATA[
#macro( mymacro $v1 )$context.getSomething()${v1}#end
        ]]></code>
    </test-code>
</test-data>
