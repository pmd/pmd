<?xml version="1.0" encoding="UTF-8"?>
<test-data
    xmlns="http://pmd.sourceforge.net/rule-tests"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://pmd.sourceforge.net/rule-tests http://pmd.sourceforge.net/rule-tests_1_0_0.xsd">

    <test-code>
        <description>bad</description>
        <rule-property name="minimum">3</rule-property>
        <expected-problems>1</expected-problems>
        <code><![CDATA[
import java.util.Vector;
import java.util.Vector;
import java.util.Vector;
import java.util.Vector;
public class Foo{}
        ]]></code>
    </test-code>

    <test-code>
        <description>ok</description>
        <rule-property name="minimum">3</rule-property>
        <expected-problems>0</expected-problems>
        <code><![CDATA[
import java.util.Vector;
public class Foo{}
        ]]></code>
    </test-code>

    <test-code>
        <description>Verify message includes import count</description>
        <rule-property name="minimum">3</rule-property>
        <expected-problems>1</expected-problems>
        <expected-messages>
            <message>A high number of imports (4) can indicate a high degree of coupling within an object; current threshold is 3.</message>
        </expected-messages>
        <code><![CDATA[
import java.util.Vector;
import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
public class Foo{}
        ]]></code>
    </test-code>

    <test-code>
        <description>Verify location of violation</description>
        <rule-property name="minimum">3</rule-property>
        <expected-problems>1</expected-problems>
        <expected-linenumbers>1-5</expected-linenumbers>
        <code><![CDATA[
import java.util.Vector;
import java.util.Vector;
import java.util.Vector;
// unrelated comment
import java.util.Vector;

public class Foo{}
        ]]></code>
    </test-code>

    <test-code>
        <description>Verify location of violation (only one import)</description>
        <rule-property name="minimum">1</rule-property>
        <expected-problems>1</expected-problems>
        <expected-linenumbers>2-2</expected-linenumbers>
        <code><![CDATA[
// unrelated comment
import java.util.Vector;

public class Foo{}
        ]]></code>
    </test-code>
</test-data>
