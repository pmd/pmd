<?xml version="1.0" encoding="UTF-8"?>
<test-data
    xmlns="http://pmd.sourceforge.net/rule-tests"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://pmd.sourceforge.net/rule-tests http://pmd.sourceforge.net/rule-tests_1_0_0.xsd">
    <test-code>
        <description><![CDATA[
failure case, inequality
     ]]></description>
        <expected-problems>1</expected-problems>
        <code><![CDATA[
public class Foo {
   public int bar(int x) {
      if (!(x == 0))
         return x;
      return 0;
   }
}
     ]]></code>
    </test-code>
    <test-code>
        <description><![CDATA[
failure case, comparison
     ]]></description>
        <expected-problems>1</expected-problems>
        <code><![CDATA[
public class Foo {
   public int bar(int x) {
      if (!(x <= 0))
         return x;
      return 0;
   }
}
     ]]></code>
    </test-code>
    <test-code>
        <description><![CDATA[
correct inequality
     ]]></description>
        <expected-problems>0</expected-problems>
        <code><![CDATA[
public class Foo {
   public int bar(int x) {
      if (x != 0)
         return x;
      return 0;
   }
}
     ]]></code>
    </test-code>
    <test-code>
        <description><![CDATA[
correct comparison
     ]]></description>
        <expected-problems>0</expected-problems>
        <code><![CDATA[
public class Foo {
   public int bar(int x) {
      if (x > 0)
         return x;
      return 0;
   }
}
     ]]></code>
    </test-code>
</test-data>
